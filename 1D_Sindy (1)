def undersample(inp, rate):
    s = int(np.floor(len(inp)/rate))
    u = np.zeros([s, 1])
    for k in range(0, s):
        u[k] = in[k*rate]
    return u[:, 0]

def load_data(path, u):
    h5 = h5py.File(path, 'r')
    inp = np.array(h5.get('U'))
